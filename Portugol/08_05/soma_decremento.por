programa
{
	funcao inicio()
	{
		inteiro num, soma=0

		escreva("Insira o número: ")
		leia(num)

		faca
		{
			soma += num
			num--
		} enquanto(num>0)

		escreva("\nA soma é ", soma)
	}
}
